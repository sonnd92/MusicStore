<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatusBar">
        <item name="android:windowBackground">@color/blackOverlay</item>
        <item name="android:fontFamily">@font/font_averta</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MsButtonLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_large_height</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MsButtonLarge.Default" parent="MsButtonLarge">
        <item name="android:background">@drawable/selector_default_button</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MsButtonLarge.Info" parent="MsButtonLarge">
        <item name="android:background">@drawable/selector_info_button</item>
    </style>

    <style name="MsButtonLarge.Primary" parent="MsButtonLarge">
        <item name="android:background">@drawable/selector_primary_button</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme.NoActionBar.TransparentStatusBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
